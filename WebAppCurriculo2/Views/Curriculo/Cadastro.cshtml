 @model WebAppCurriculo2.Models.Curriculo  

<h2>Cadastro de Curriculo</h2>

<form action="/Curriculo/Cadastro" method="post">

    <div class="panel panel-primary">
        <div class="panel-heading">1)Informações Pessoais </div>
        <div class="panel-body">

            <div class="from-group">
                <label for="Nome">Nome:</label>
                <input type="text" class="from-control" id="Nome" name="Nome" value="@Model.Nome" placeholder="Entre com nome completo" />

            </div>

            <div class="from-group">
                <label for="Email">Email:</label>
                <input type="text" class="from-control" id="Email" name="Email" value="@Model.Email" placeholder="Email principal" />

            </div>

            <div class="from-group">
                <label for="DataNascimento">Data de Nascimento:</label>
                <input type="text" class="from-control" id="DataNascimento" name="DataNascimento" value="@Model.DataNascimento" placeholder="Formato dd/mm/aa. Ex.: 29/05/2000" />

            </div>

            <div class="from-group">
                <label for="Altura">Altura:</label>
                <input type="text" class="from-control" id="Altura" name="Altura" value="@Model.Altura" placeholder="Ex.: 1.70" />

            </div>

            <div class="from-group">
                <label for="Site">Site:</label>
                <input type="text" class="from-control" id="Site" name="Site" value="@Model.Site" placeholder="Ex.: http://www.seusite.com" />

            </div>

            <div class="from-group">
                <label for="EstadoCivil">Estado Civil:</label>
                @*<select class="from-control" id="EstadoCivil" name="EstadoCivil">
                   <option value="">--Selecione--</option>
                    <option value="1">Casado(a)</option>
                    <option value="2(a)">Solteiro(a)</option>
                    <option value="3">Viuvo(a)</option>
                </select>*@

                <select  class="from-control" asp-for="EstadoCivil" asp-items="Html.GetEnumSelectList<Estado>()">

                </select>

            </div>

            <div class="from-group">
                <label class="radio-inline">
                Sexo
                </label>


                @*</label>
                <label class="radio-inline">
                    <input type="radio" name="Sexo" id="SexoFeminino" value="Feminino" />
                    Feminino
                </label>
                <label class="radio-inline">
                    <input type="radio" name="Sexo" id="SexoMasculino" value="Masculino" />
                    Masculino
                </label>*@

                @foreach (var Sexo in Enum.GetValues(typeof(Sexo)))
                {
                <label class="radio-inline">
                    <input type="radio" asp-for="Sexo" value="@Sexo" />
                    @Sexo
                </label>
                }

            </div>
        </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">2) Endereço </div>
                <div class="panel-body">

                    <div class="from-group">
                        <label for="CEP">CEP:</label>
                        <input type="text" class="from-control" id="CEP" name="CEP" value="@Model.Altura" placeholder="7860845" />

                    </div>


                    <div class="from-group">
                        <label for="Endereco">Endereço:</label>
                        <input type="text" class="from-control" id="Endereco" name="Endereco" value="@Model.Endereco" placeholder="Ex.: Rua, Bairro, Proximo" />

                    </div>

                </div>

            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">3) contato </div>
                <div class="panel-body">

                    <div class="from-group">
                        <label for="TelefoneFixo">Telefone:</label>
                        <input type="text" class="from-control" id="TelefoneFixo" name="TelefoneFixo"
                               value="@Model.TelefoneFixo" placeholder="3653-0345" />

                    </div>


                    <div class="from-group">
                        <label for="TelefoneMovel">Celular:</label>
                        <input type="text" class="from-control" id="TelefoneMovel" name="TelefoneMovel" 
                         value="@Model.TelefoneMovel" placeholder="9996374756" />

                    </div>



                </div>

            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">4) Conhecimentos </div>
                <div class="panel-body">

            <div class="form-group">

                    <div class="checkbox-inline">
                        <label>
                            <input type="checkbox" value="true" name="HTML" id="HTML">HTML
                        </label>
                    </div>

                    <div class="checkbox-inline">
                        <label>
                            <input type="checkbox" value="true" name="CSS" id="CSS">CSS
                        </label>
                    </div>

                    <div class="checkbox-inline">
                        <label>
                            <input type="checkbox" value="true" name="JavaScript" id="JavaScript">JavaScript
                        </label>
                    </div>

            </div>

            <div class="form-group">
                <div class="from-group">
                    <label for="MaisConhecimento">Mais Conhecimentos:</label>
                    <textarea 
                              class="from-control" rows="10" id="MaisConhecimentos" name="MaisConhecimentos" > 
                    </textarea>

                </div>

            </div>

                </div>

            </div>

            <div class=" text-right">
                <input id="btnCancelar" type="button" value=" Cancelar" class=" btr btr-danger" />
                <input id="btnCadastrar" type="submit" value=" Salvar" class=" btr panel-primary" />

            </div>

</form>

